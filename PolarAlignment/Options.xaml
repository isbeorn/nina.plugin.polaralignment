                    <TextBlock Text="Avalon Polar Alignment System" />
                </GroupBox.Header>
                <Grid HorizontalAlignment="Stretch">
                    <!--  Manual UPA Control  -->
                    <ContentPresenter Content="{Binding UniversalPolarAlignmentVM}" Visibility="{Binding DoAutomatedAdjustments, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

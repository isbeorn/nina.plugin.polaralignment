                    <Grid HorizontalAlignment="Stretch" Visibility="{Binding DoAutomatedAdjustments, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"

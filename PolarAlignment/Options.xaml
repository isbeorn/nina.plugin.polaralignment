<ResourceDictionary
    x:Class="NINA.Plugins.PolarAlignment.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalon="clr-namespace:NINA.Plugins.PolarAlignment.Avalon"
    xmlns:behavior="clr-namespace:NINA.WPF.Base.Behaviors;assembly=NINA.WPF.Base"
    xmlns:converters="clr-namespace:NINA.Plugins.PolarAlignment.Converters"
    xmlns:coreconverters="clr-namespace:NINA.Core.Utility.Converters;assembly=NINA.Core"
    xmlns:local="clr-namespace:NINA.Plugins.PolarAlignment"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:properties="clr-namespace:NINA.Plugins.PolarAlignment.Properties"
    xmlns:rules="clr-namespace:NINA.Core.Utility.ValidationRules;assembly=NINA.Core"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <coreconverters:InverseBooleanToVisibilityCollapsedConverter x:Key="InverseBooleanToVisibilityConverter" />
    <coreconverters:BooleanToVisibilityHiddenConverter x:Key="BooleanToVisibilityHiddenConverter" />
    <DataTemplate x:Key="Three Point Polar Alignment_Options">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center" Text="Default Move Rate" />
                <TextBox
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding DefaultMoveRate}" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default East Direction" />
                <CheckBox
                    Grid.Row="1"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding DefaultEastDirection}" />
                <TextBlock
                    Grid.Row="2"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default Target Distance" />

                <ninactrl:UnitTextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding DefaultTargetDistance}"
                    Unit="°" />
                <TextBlock
                    Grid.Row="3"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default Search Radius" />
                <ninactrl:UnitTextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding DefaultSearchRadius}"
                    Unit="°" />

                <TextBlock
                    Grid.Row="4"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Axis move timeout factor" />
                <ninactrl:UnitTextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding MoveTimeoutFactor}"
                    Unit="x" />

                <TextBlock
                    Grid.Row="5"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default azimuth offset from pole" />
                <ninactrl:UnitTextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding DefaultAzimuthOffset}"
                    Unit="°" />

                <TextBlock
                    Grid.Row="6"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default altitude offset from pole" />
                <ninactrl:UnitTextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding DefaultAltitudeOffset}"
                    Unit="°" />

                <TextBlock
                    Grid.Row="7"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Default Alignment Tolerance">
                    <TextBlock.ToolTip>
                        <TextBlock Text="Setting the Polar Alignment Tolerance to non-zero will specify a tolerance in arcminutes where the polar alignment routine automatically completes when below the threshold" />
                    </TextBlock.ToolTip>
                </TextBlock>
                <ninactrl:UnitTextBox
                    Grid.Row="7"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding AlignmentTolerance}"
                    Unit="arcmin" />

                <TextBlock
                    Grid.Row="8"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Altitude Error Color" />
                <xceed:ColorPicker
                    Grid.Row="8"
                    Grid.Column="1"
                    Width="80"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedColor="{Binding AltitudeErrorColor}" />
                <TextBlock
                    Grid.Row="9"
                    VerticalAlignment="Center"
                    Text="Azimuth Error Color" />
                <xceed:ColorPicker
                    Grid.Row="9"
                    Grid.Column="1"
                    Width="80"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedColor="{Binding AzimuthErrorColor}" />
                <TextBlock
                    Grid.Row="10"
                    VerticalAlignment="Center"
                    Text="Total Error Color" />
                <xceed:ColorPicker
                    Grid.Row="10"
                    Grid.Column="1"
                    Width="80"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedColor="{Binding TotalErrorColor}" />
                <TextBlock
                    Grid.Row="11"
                    VerticalAlignment="Center"
                    Text="Target Circle Color" />
                <xceed:ColorPicker
                    Grid.Row="11"
                    Grid.Column="1"
                    Width="80"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedColor="{Binding TargetCircleColor}" />
                <TextBlock
                    Grid.Row="12"
                    VerticalAlignment="Center"
                    Text="Sucessful Step Color" />
                <xceed:ColorPicker
                    Grid.Row="12"
                    Grid.Column="1"
                    Width="80"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedColor="{Binding SuccessColor}" />
                <TextBlock
                    Grid.Row="13"
                    VerticalAlignment="Center"
                    Text="Log polar alignment error adjustments?" />
                <CheckBox
                    Grid.Row="13"
                    Grid.Column="1"
                    MinWidth="80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding LogError}" />
                <TextBlock
                    Grid.Row="14"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Adjust for refraction?" />
                <StackPanel
                    Grid.Row="14"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <CheckBox
                        MinWidth="80"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding RefractionAdjustment}" />
                    <TextBlock
                        Margin="5,5,0,0"
                        Text="This option is currently under test. Feedback if this results in better polar alignment is appreciated!"
                        Visibility="{Binding RefractionAdjustment, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="15"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Stop Tracking when done?" />
                <CheckBox
                    Grid.Row="15"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding StopTrackingWhenDone}" />
                <TextBlock
                    Grid.Row="16"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Auto pause between continuous exposures?" />
                <CheckBox
                    Grid.Row="16"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding AutoPause}" />
                <TextBlock
                    Grid.Row="17"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Use Avalon Polar Alignment System?" />
                <CheckBox
                    Grid.Row="17"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem}" />
                <TextBlock
                    Grid.Row="18"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Reverse Azimuth Axis?"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <CheckBox
                    Grid.Row="18"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding UniversalPolarAlignmentVM.ReverseAzimuth}"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <TextBlock
                    Grid.Row="19"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Reverse Altitude Axis?"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <CheckBox
                    Grid.Row="19"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsChecked="{Binding UniversalPolarAlignmentVM.ReverseAltitude}"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <TextBlock
                    Grid.Row="20"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Azimuth backlash compensation"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <ninactrl:UnitTextBox
                    Grid.Row="20"
                    Grid.Column="1"
                    MinWidth="80"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding UniversalPolarAlignmentVM.XBacklashCompensation}"
                    Unit="steps"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <TextBlock
                    Grid.Row="21"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    Text="Do automated adjustments?"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <StackPanel
                    Grid.Row="21"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <CheckBox
                        MinWidth="80"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding UniversalPolarAlignmentVM.DoAutomatedAdjustments}"
                        Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Grid Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock
                            Margin="5,5,0,0"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Text="This option is under test and experimental"
                            Visibility="{Binding UniversalPolarAlignmentVM.DoAutomatedAdjustments, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </StackPanel>
                <Grid Grid.Row="22" Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Text="Automated adjustment settle time"
                        Visibility="{Binding UniversalPolarAlignmentVM.DoAutomatedAdjustments, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
                <Grid
                    Grid.Row="22"
                    Grid.Column="1"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ninactrl:UnitTextBox
                        MinWidth="80"
                        Margin="5,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding UniversalPolarAlignmentVM.AutomatedAdjustmentSettleTime}"
                        Unit="s"
                        Visibility="{Binding UniversalPolarAlignmentVM.DoAutomatedAdjustments, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
                <Grid
                    Grid.Row="23"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        Margin="0,5,0,0"
                        FontStyle="Italic"
                        Text="Make sure to set your gear ratio to achieve 1 arcminute per step for each axis!"
                        Visibility="{Binding UniversalPolarAlignmentVM.DoAutomatedAdjustments, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
                <Button
                    Grid.Row="24"
                    Margin="0,20,0,0"
                    Command="{Binding ResetSettingsCommand}">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{StaticResource ButtonForegroundBrush}"
                        Text="Reset All Settings" />
                </Button>
            </Grid>
            <GroupBox
                Grid.Row="1"
                Margin="0,10,0,0"
                Header="Avalon Polar Alignment System"
                Visibility="{Binding UniversalPolarAlignmentVM.UsePolarAlignmentSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid DataContext="{Binding UniversalPolarAlignmentVM}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Command="{Binding ConnectCommand}" Visibility="{Binding Connected, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">Test Connect</Button>
                        <Button Command="{Binding DisconnectCommand}" Visibility="{Binding Connected, Converter={StaticResource BooleanToVisibilityConverter}}">Disconnect</Button>
                    </Grid>
                    <ContentPresenter Grid.Row="1" Content="{Binding UniversalPolarAlignmentVM}" />
                </Grid>
            </GroupBox>

        </Grid>
    </DataTemplate>


